<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- icon风格，用于显示主页的button风格 -->
    <style name="icon_above">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">111dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="icon_above.marginLeft1">
        <item name="android:layout_marginLeft">14dp</item>
    </style>
    
    <style name="icon_above.marginLeft2">
        <item name="android:layout_marginLeft">12dp</item>
    </style>


    <!-- icon风格，用于显示主页的button风格 -->
    <style name="fragment_field_button">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    
    <style name="fragment_field_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
    </style>
    
     <!-- icon风格，用于显示导航页的button风格 -->
    <style name="navi_menu_button_style">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="navi_secondary_menu_button_style">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <!-- icon风格，用于显示规划页的button风格 -->
    <style name="button_planning">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

	<!-- circle风格，用于显示车辆设置主页的八个圆圈风格风格 -->
    <style name="circle_page">
        <item name="android:background">#00000000</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:layout_width">23dp</item>
    </style>
    
    <style name="circle_page.first">
        <item name="android:layout_marginLeft">118dp</item>
        <item name="android:src">@drawable/bullet_blue</item>
    </style>
    
    <style name="circle_page.after">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:src">@drawable/bullet_white</item>
    </style>

    <style name="tractorinfo_list_textstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textColor">#1d1626</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>
    
    <!-- 车辆设置主界面文字的统一风格 -->
    <style name="tractor_adding_textstyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#1d1626</item>
    </style>

    <style name="tractor_adding_textstyle.big">
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="tractor_adding_textstyle.normal">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">20sp</item>
    </style>


    <!-- 车辆设置主页面的小按钮和提示按钮风格 -->
    <style name="tractor_info_help_style">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/help_image</item>
    </style>
    
    <style name="tractor_info_button_style">
        <item name="android:textColor">#999999</item>
        <item name="android:background">@drawable/button_bluebackground</item>
    </style>
    
    <style name="tractor_info_button_style.big">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="tractor_info_button_style.normal">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="tractor_info_button_style.small">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">38dp</item>
    </style>
    
    <!-- 车辆数据库信息表的按钮风格 -->
    <style name="tractor_info_button_style.huge">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

</resources>





