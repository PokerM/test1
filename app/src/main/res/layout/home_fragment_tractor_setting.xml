<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/layout_center_left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_paired_devices"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#666"
            android:paddingLeft="5dp"
            android:gravity="center_vertical|left"
            android:text="@string/tractor_info_list_title"
            android:textColor="#fff"
            android:textSize="25sp" />


            <ListView
                android:id="@+id/lstTractor"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                >
            </ListView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
             >

            <Button
                android:id="@+id/btnAddTractorInfo"
                android:layout_marginLeft="15dp"
                style="@style/tractor_info_button_style.huge"
                android:background="@drawable/imgbtn_tractorinfo_more" />

            <Button
                android:id="@+id/btnEditTractorInfo"
                style="@style/tractor_info_button_style.huge"
                android:layout_toRightOf="@id/btnAddTractorInfo"
                android:background="@drawable/imgbtn_tractorinfo_edit" />

            <Button
                android:id="@+id/btnRemoveTractorInfo"
                style="@style/tractor_info_button_style.huge"
                android:layout_toRightOf="@id/btnEditTractorInfo"
                android:background="@drawable/imgbtn_tractorinfo_remove" />

            <Button
                android:id="@+id/btnClearTractorInfo"
                style="@style/tractor_info_button_style.huge"
                android:layout_toRightOf="@id/btnRemoveTractorInfo"
                android:background="@drawable/imgbtn_tractorinfo_clear" />

            <Button
                android:id="@+id/btnSaveTractorInfo"
                style="@style/tractor_info_button_style.huge"
                android:layout_toRightOf="@id/btnClearTractorInfo"
                android:background="@drawable/imgbtn_tractorinfo_save" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/textview_border_4"
        android:fadingEdge="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/layoutAttributeCollections"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_center_right"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_1"
                    android:text="@string/tractor_name" />

                <TextView
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_2"
                    android:text="@string/tractor_wheelbase" />

                <TextView
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_3"
                    android:text="@string/tractor_antenna_lateral" />

                <TextView
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_2"
                    android:text="@string/tractor_antenna_rear" />

                <TextView
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_3"
                    android:text="@string/tractor_antenna_height" />

                <TextView
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_2"
                    android:text="@string/tractor_min_turning_radius" />

                <TextView
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_3"
                    android:text="@string/tractor_angle_correction" />

                <TextView
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_2"
                    android:text="@string/tractor_implement_width" />

                <TextView
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_3"
                    android:text="@string/tractor_implement_length" />

                <TextView
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_2"
                    android:text="@string/tractor_implement_offset" />

                <TextView
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_3"
                    android:text="@string/tractor_operation_linespcing" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtName"
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_1"
                    />

                <TextView
                    android:id="@+id/txtWheelbase"
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_2"
                    />

                <TextView
                    android:id="@+id/txtLateral"
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_3"
                    />

                <TextView
                    android:id="@+id/txtRear"
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_2"
                    />

                <TextView
                    android:id="@+id/txtHeight"
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_3"
                    />

                <TextView
                    android:id="@+id/txtRadius"
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_2"
                    />

                <TextView
                    android:id="@+id/txtAngular"
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_3"
                    />

                <TextView
                    android:id="@+id/txtWidth"
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_2"
                    />

                <TextView
                    android:id="@+id/txtLength"
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_3"
                    />

                <TextView
                    android:id="@+id/txtOffset"
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_2"
                    />

                <TextView
                    android:id="@+id/txtSpace"
                    style="@style/tractorinfo_list_textstyle"
                    android:background="@drawable/textview_border_3"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>