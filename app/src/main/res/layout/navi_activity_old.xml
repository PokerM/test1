<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:orientation="vertical"
    android:background="@drawable/screen"
    tools:context="sjtu.me.tractor.main.NaviActivityOldVersion" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:onClick="onConnectClicked"
            android:text="鎵撳紑杩炴帴"
            android:textSize="20sp" 
            android:background="@drawable/connect"/>

        <Button
            android:id="@+id/btnSetting"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/car_settings_skin"
            android:text="鍙傛暟璁剧疆"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnInitialize"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/setting_send_skin"
            android:text="鍙傛暟涓嬪彂"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnDataReceival"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/data_receive_skin"
            android:text="鎺ユ敹鏁版嵁"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:background="@drawable/button_start_skin"
            android:text="鍚姩瀵艰埅"
            android:textSize="20sp" />

    </LinearLayout>
  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="5dp" >

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="杈撳叆鐢伴暱(m)"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextFieldLength"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="100"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="杈撳叆鐢板(m)"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextFieldWidth"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="100"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnSetOrigin"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/button_skin2"
                android:text="璁剧疆鍘熺偣" />

            <Button
                android:id="@+id/btnSetField"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/button_skin2"
                android:text="璁剧疆鐢板湴" />
            
            <Button
                android:id="@+id/btnUseOldField"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/button_skin2"
                android:text="浣跨敤鍘嗗彶鍦板潡" />

            <Button
                android:id="@+id/btnSetA"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:text="璁剧疆A鐐�"
                android:background="@drawable/button_skin2"  />

            <Button
                android:id="@+id/btnSetB"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:text="璁剧疆B鐐�"
                android:background="@drawable/button_skin2"  />

            <Button
                android:id="@+id/btnDrawAB"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:text="鐢籄B绾�"
                android:background="@drawable/button_skin2"  />

            <Button
                android:id="@+id/btnPlotPath"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:text="缁樺埗杞ㄨ抗"
                android:background="@drawable/button_skin2"  />

        </LinearLayout>

        <FrameLayout
            android:layout_width="600dp"
            android:layout_height="600dp" >

            <sjtu.me.tractor.surfaceview.MySurfaceView
                android:id="@+id/mySurfaceView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <CheckBox
                android:id="@+id/starTopLeft"
                style="?android:attr/starStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"  />

            <CheckBox
                android:id="@+id/starTopRight"
                style="?android:attr/starStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right" />

            <CheckBox
                android:id="@+id/starBottomLeft"
                style="?android:attr/starStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left" />

            <CheckBox
                android:id="@+id/starBottomRight"
                style="?android:attr/starStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right" />

            <TextView
                android:id="@+id/txtDistance2Bound1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="璺濈杈圭晫1锛�"
                android:textSize="15sp" />
            
            <TextView
                android:id="@+id/txtDistance2Bound2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:text="璺濈杈圭晫2锛�"
                android:textSize="15sp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:paddingLeft="5dp" >

                <TextView
                    android:id="@+id/txtBodyLength"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="杞﹁韩闀垮害:"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtAntennaHeight"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="澶╃嚎楂樺害:"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtDistance2Shaft"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="澶╃嚎璺濅腑杞�:"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtDistance2Back"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="澶╃嚎璺濆悗杞�:"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtSpeed"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="璁剧疆閫熷害:"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtSpace"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="琛岄棿璺�:"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2.2"
                android:orientation="vertical"
                android:paddingLeft="5dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/gps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GPS鏍囪瘑:"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/stopBit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="鍋滄浣�:"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/northAngle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="鐪熷寳鏂瑰悜:"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/xCoordinate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="X鍧愭爣:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/yCoordinate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Y鍧愭爣:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/directionAngle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="鑸悜瑙�:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/carVelocity"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="鍦伴潰閫熷害:"
                    android:textSize="18sp" />
                
                <TextView
                    android:id="@+id/traceDistance"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="杩借釜璺濈:"
                    android:textSize="18sp" />
                
                <TextView
                    android:id="@+id/phiAngle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="妯悜鍋忓樊:"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:paddingTop="10dp" >

                <ImageButton
                    android:id="@+id/imgbtnF"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:longClickable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/forward" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" >

                    <ImageButton
                        android:id="@+id/imgbtnL"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="left"
                        android:longClickable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/left" />

                    <ImageButton
                        android:id="@+id/imgbtnSTOP"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:src="@drawable/stop" />

                    <ImageButton
                        android:id="@+id/imgbtnR"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:longClickable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/right" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/imgbtnB"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:longClickable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/back" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="鎺ユ敹鏁版嵁"
            android:textSize="15sp"
            android:background="@drawable/textview_border_with_cornor" />

        <TextView
            android:id="@+id/txtStringLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="鏁版嵁闀垮害"
            android:textSize="15sp"
            android:background="@drawable/textview_border_with_cornor" />
    </LinearLayout>

</LinearLayout>